
# Datacatalog 데이터베이스 생성

%sql
create database story_data


# app log 데이터를 위한 silver data 생성
%sql
 create external table story_data.applog
 (
    adid string,
    uuid string,
    name string,
    timestamp string,
    gtmTimes string,
    screen_name string,
    item_id string,
    content_type string,
    item_category string,
    is_zb_agent string,
    building_id string,
    area_type_id string,
    agent_id string,
    status  string,
    button_name string
 )
 partitioned by (base_date date)
 STORED AS PARQUET
 LOCATION 's3://fc-storydata/silver/applog'
 tblproperties ("parquet.compress"="SNAPPY" ,"classification"="parquet")



%sql

insert overwrite table   story_data.applog
    PARTITION(base_date)  
 select 
    adid,
    uuid,
    name,
    timestamp,
    gtmTimes,
    screen_name,
    item_id,
    content_type,
    item_category,
    is_zb_agent,
    building_id,
    area_type_id,
    agent_id,
    status,
    button_name,
    base_date 
from logs


# partition data 변경

to_date(base_date, 'yyyy-MM-dd') as base_date 

# 아파트 단지별 조회수 
기준일자 ADID 단지ID 이벤트일시

# 데이터 확인
select  adid,
       building_id as apart_id,
       timestamp as base_dt,
       base_date
from story_data.applog
where item_category = '아파트'


# 테이블 생성
CREATE EXTERNAL TABLE  danji_user_view_silver
(
  adid string, 
  apart_id string,
  base_dt string
)
PARTITIONED BY ( 
  base_date date )
STORED AS PARQUET
LOCATION 's3://fc-storydata/silver/danji_user_view_silver'
tblproperties ("parquet.compress"="SNAPPY" ,"classification"="parquet")
;


# 아파트 매물별 사용자 조회수
기준일자 ADID 이벤트일시 단지ID 매물ID

# 데이터 확인
    select base_date,
           adid, 
           timestamp as base_dt,
           building_id as apart_id, 
           item_id 
    from logs 
    where item_category = '아파트'

# 테이블 생성
CREATE EXTERNAL TABLE  danji_item_view_silver
(
  adid string,
  base_dt string, 
  apart_id string,
  item_id  
)
PARTITIONED BY ( 
  base_date date )
STORED AS PARQUET
LOCATION 's3://fc-storydata/silver/danji_item_view_silver'
tblproperties ("parquet.compress"="SNAPPY" ,"classification"="parquet")
;

#### Gold Data ###
# 테이블 생성
CREATE EXTERNAL TABLE  story_data.danji_user_view_summary_gold
(
  base_date, 
  danji_id, 
  danji_name, 
  sido, 
  sigungu, 
  dong, 
  view_count 
)
STORED AS PARQUET
LOCATION 's3://fc-storydata/gold/danji_user_view_summary_gold'
tblproperties ("parquet.compress"="SNAPPY" ,"classification"="parquet")
;


